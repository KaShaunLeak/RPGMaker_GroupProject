
<%= form_for @character do |f| %>
     <p class="left">

  <% if @character.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@character.errors.count, "error") %> prohibited
        this character from being saved:
      </h2>
      <ul>
        <% @character.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
      <%= f.submit class:'button'%><br><br>
      <%= f.label :name %>(min 5)*<br>
      <%= f.text_field :name, class:'textfield'%><br>

      <%= f.label :sex %>(M/F/O)*<br>
      <%= f.text_field :sex, class:'textfield' %><br>

      <%= f.label :age%>(Max 9999)*<br>
      <%= f.text_field :age, class:'textfield'%><br>

      <%= f.label :race%>(min 3 max 12)*<br>
      <%= f.text_field :race, class:'textfield'%><br

      <%= f.label :job %>(max 12)<br>
      <%= f.text_field :job, class:'textfield'%><br>

      <%= f.label :birthday%>(max 15)<br>
      <%= f.text_field :birthday, class:'textfield'%><br>
      <%= f.label :birth %>(max 20)<br>
      <%= f.text_field :birth, class:'textfield'%><br>

      <%= f.label :country%>(max 20)<br>
      <%= f.text_field :country, class:'textfield'%><br>

      <%= f.label :personality%>(max 512)<br>
      <%= f.text_area :personality, class:'textfield'%><br>

      <%= f.label :backstory%>(max 2560)<br>
      <%= f.text_area :backstory, class:'textfield'%><br>
      <%= f.submit class:'button'%><br><br>

<% end %>
