<%= link_to 'Character List', characters_path, class: 'weblink' %> 
<p>
  <strong>Name:</strong><br>
  <%= @character.name %>
</p>
 
<p>
  <strong>Sex:</strong><br>
  <%= @character.sex %>
</p>

<p>
  <strong>Age:</strong><br>
  <%= @character.age %>
</p>

<p>
  <strong>Race:</strong><br>
  <%= @character.race %>
</p>

<p>
  <strong>Job:</strong><br>
  <%= @character.job %>
</p>

<p>
  <strong>Birthday:</strong><br>
  <%= @character.birthday %>
</p>

<p>
  <strong>Magical Affinity:</strong><br>
  <%= @character.magic %>
</p>

<p>
  <strong>Birth Country:</strong><br>
  <%= @character.birth %>
</p>

<p>
  <strong>Country Alliance:</strong><br>
  <%= @character.country %>
</p>

<p>
  <strong>Personality:</strong><br>
  <%= @character.personality %>
</p>

<p>
  <strong>Backstory:</strong><br>
  <%= @character.backstory %>
</p>

<h2>Comments</h2>
<% @character.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>
 
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>

<%= form_for([@character, @character.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>